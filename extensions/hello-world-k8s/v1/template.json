{
   "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {  
	
		"targetVMName":{
			"type": "string",
			"minLength": 1,
			"metadata": {
				"description": "Name of the vm to run the "
			}
		},
		"targetVMType":{
			"type": "string",
			"minLength": 1,
			"metadata": {
				"description": "Type of the vm to run the extension: master or agent "
			}
		},
		
		"vmIndex": {
			"type": "int",
			"metadata": {
				"description": "index in the pool of the current agent, used so that we can get the extension name right"
			}
		}
   },
   "variables": {  
		"singleQuote": "'",
		"initScriptUrl": "https://raw.githubusercontent.com/ebandis/aks-engine-extensions-testapp-v1/master/extensions/hello-world-k8s/v1/hello-world-k8s.sh"
   },
   "resources": [  
	{
      "apiVersion": "2020-05-01",
      "dependsOn": [],
      "location": "[resourceGroup().location]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
	  "name": "[concat(parameters('targetVMName'),'/cse', '-', parameters('targetVMType'), '-', parameters('vmIndex'))]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
			"fileUris": [ 
			   "[variables('initScriptUrl')]" 
			 ]
		},
        "protectedSettings": {
			"commandToExecute": "[concat('/bin/bash -c \"/bin/bash ./hello-world-k8s.sh ', ' >> /var/log/azure/hello-world-k8s.log 2>&1 &\" &')]"
        }
      }
    }
	],
   "outputs": {  }
}